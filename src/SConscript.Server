# vim: ft=python

Import('env')

dir = 'Server'

envCopy = env.Clone()
envCopy.Append(
                CPPPATH = '.'
              )

sourceTargets = [ 'Common/Field.cpp',
                  'Common/FieldCondition.cpp',
                  'Common/QueryStructures.cpp',
                  'Database.cpp',
                  'Exceptions.cpp',
                  'main.cpp' ]

targets = []
for source in sourceTargets:
  targets.append(dir + '/' + source)

program = envCopy.Program(target = '../bin/Server',
                          source = targets)

Return( 'program' )
